# Environment variables template
# Copy this file to .env and fill in your values

# Scrapy settings
SCRAPY_SETTINGS_MODULE=scraper.settings

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/scraper.log

# Data output
DATA_DIR=data
OUTPUT_FORMAT=json

# Rate limiting
DOWNLOAD_DELAY=1
RANDOMIZE_DOWNLOAD_DELAY=0.5

# User agent
USER_AGENT=web-scraper (+http://www.yourdomain.com)

# Concurrent requests
CONCURRENT_REQUESTS=16
CONCURRENT_REQUESTS_PER_DOMAIN=8

# AutoThrottle
AUTOTHROTTLE_ENABLED=True
AUTOTHROTTLE_START_DELAY=1
AUTOTHROTTLE_MAX_DELAY=60
AUTOTHROTTLE_TARGET_CONCURRENCY=1.0
AUTOTHROTTLE_DEBUG=False

# Cookies
COOKIES_ENABLED=True

# Telnet console
TELNETCONSOLE_ENABLED=False

# Memory usage
MEMDEBUG_ENABLED=False
MEMUSAGE_ENABLED=True
MEMUSAGE_LIMIT_MB=2048
MEMUSAGE_WARNING_MB=1024

# Stats
STATS_CLASS=scrapy.statscollectors.MemoryStatsCollector

# Database configuration
DATABASE_URL=postgresql://scraper:scraper_password@localhost:5432/scraper_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=scraper_db
DATABASE_USER=scraper
DATABASE_PASSWORD=scraper_password